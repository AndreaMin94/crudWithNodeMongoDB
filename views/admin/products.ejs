<%- include('../includes/head.ejs') %>
<div class="container">
  <div class="row text-center my-5">
    <div class="col-12">
      <h2>Products</h2>
    </div>
  </div>
  <div class="row my-3">
    <% products.forEach(function(prod) { %>
      <div class="col-12 col-md-4">
        <div class="card">
          <img class="card-img-top img-fluid" src='<%= prod.imageUrl %>'' alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= prod.title %></h5>
            <p class="card-text"><%= prod.description %></p>
            <p class="card-text">â‚¬ <%= prod.price %></p>
            <a href="/admin/edit-product/<%= prod._id %>" class="btn btn-primary">Edit</a>
            <a href="/admin/delete/<%= prod._id %>" class="btn btn-info btn-outline">Delete</a>
          </div>
        </div>
      </div>
   <% }); %> 
  </div>
</div>
<%- include('../includes/footer.ejs') %>